    <script>
      function habitCheck() {
        let name = prompt(
          "Welcome to your daily wellness check ðŸŒž Whatâ€™s your name?"
        );
        let sleepTime = prompt(
          name + ", do you usually sleep 7 or more hours per night?"
        );

        let message;

        if (sleepTime >= 7) {
          message = "great! Keep it up ðŸŒ™";
        } else {
          message = "try adjusting your bedtime ðŸ˜´";
        }

        alert(name + ", " + message);
      }

      let startButton = document.querySelector("button");
      startButton.addEventListener("click", habitCheck);
    </script>
